<Window x:Class="Harbor.Wpf.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harbor.Wpf"
        mc:Ignorable="d"
        Title="LogWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                <Button Width="Auto" Margin="10" Padding="8,2" Name="CloseButton" Click="CloseButton_Click">Close</Button>
                <Button Width="Auto" Margin="10" Padding="8,2" Name="ClearButton" Click="ClearButton_Click">Clear Log</Button>
            </WrapPanel>
            <TextBox Margin="5" IsReadOnly="True" Name="LogText" VerticalScrollBarVisibility="Auto"></TextBox>
        </DockPanel>
    </Grid>
</Window>
